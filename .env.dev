# Top Songs Dashboard - Development Environment Configuration

# General settings
ENVIRONMENT=development
DEBUG=true
PROJECT_NAME="Top Songs Dashboard"

# API Server settings
API__HOST=0.0.0.0
API__PORT=8000
API__DEBUG=true
API__WORKERS=4

# Kafka settings
KAFKA__BOOTSTRAP_SERVERS=192.168.0.100:9092
KAFKA__TOPIC_NAME=song-plays

# MinIO (S3-compatible) settings
MINIO__ENDPOINT=192.168.0.100:7001
MINIO__ACCESS_KEY=minioadmin
MINIO__SECRET_KEY=minioadmin
MINIO__SECURE=false
MINIO__BUCKET_NAME=song-data
MINIO__REGION=us-east-1

# PostgreSQL settings
POSTGRES__POSTGRES_DSN=postgresql://dixit:aero-plane@192.168.0.100:5432/top_songs
POSTGRES__MIN_CONNECTIONS=1
POSTGRES__MAX_CONNECTIONS=10

# Spark settings
SPARK__MASTER=local[*]
SPARK__APP_NAME=TopSongsDashboard
SPARK__CHECKPOINT_LOCATION=/tmp/checkpoint
SPARK__BATCH_INTERVAL_SECONDS=60


# Prefect settings
PREFECT__API_URL=http://localhost:4200/api
PREFECT__UI_PORT=4200
PREFECT__AGENT_QUEUE_NAME=default
PREFECT__FLOW_STORAGE_PATH=./storage/prefect

# Logging settings
# LOGS_DIR: Path to logs directory - can be relative or absolute
LOGS_DIR=logs
# LOG_OUTPUT: Where to output logs - Options: file, console, both
LOG_OUTPUT=both
